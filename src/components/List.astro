---
interface Props {
  items: string[] | string;
  separator?: string;
  type?: "primary" | "normal";
}

const { items, type = "normal", separator = "Â·" } = Astro.props;

const parsedItems = typeof items === "string" ? items.split(", ") : items;
---

<ul class="flex flex-wrap items-center w-full">
  {
    parsedItems.map((item, i) => (
      <li class="flex items-center">
        <span
          class:list={[
            "text-[9pt]",
            { "text-slate-950": type === "primary" },
            type === "primary" ? "text-blue-900" : "text-slate-700",
          ]}
        >
          {item}
        </span>

        {i !== items.length - 1 && (
          <span class="text-slate-300 mx-[2pt]">{separator}</span>
        )}
      </li>
    ))
  }
</ul>
